    </None>
    <None Update="CertStore\issued\fhirlabs.net.mismatchBaseUrl.client.pfx">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="CertStore\issued\fhirlabs.net.mismatchSan.client.pfx">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
