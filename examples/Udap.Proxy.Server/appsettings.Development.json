{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Yarp": "Information",
      "Microsoft.AspNetCore.Authentication.JwtBearer.JwtBearerHandler": "Information"
    }
  },


  "ReverseProxy": {
    "Routes": {

      "gFhirLab-route": {
        "ClusterId": "gFhirLab-cluster",
        //NOTE:: udapPolicy means this endpoint is protected by UDAP
        "AuthorizationPolicy": "udapPolicy",
        "MetaData": {
          //"AccessToken":  "Your Environment Variable.",
          //Example
          //"AccessToken": "env_gcp_bearer_token",
          "GCPKeyResolve": "gcp_joe_key_location",
          "UdapMetadata": "gcp_joe_udap_metadata"
        },
        "Match": {
          "Path": "/fhir/r4/{**remainder}"
        },
        "Transforms": [
          {
            "PathPattern": "/fhir/{**remainder}"
          }
        ]
      },
      "gFhirLab-route-wellknown": {
        "ClusterId": "self",
        "Match": {
          "Path": "/fhir/r4/.well-known/{**remainder}"
        },
        "Transforms": [
          {
            "PathPattern": ".well-known/{**remainder}"
          }
        ]
      },
      "gFhirLab-route-base": {
        "ClusterId": "gFhirLab-cluster",
        "MetaData": {
          //"AccessToken":  "Your Environment Variable.",
          "GCPKeyResolve": "gcp_joe_key_location"
        },
        "Match": {
          "Path": "/fhir/r4"
        },
        "Transforms": [
          {
            "PathSet": "/"
          }
        ]
      },
      "gFhirLab-route-metadata": {
        "ClusterId": "gFhirLab-cluster",
        "MetaData": {
          //"AccessToken":  "Your Environment Variable.",
          "GCPKeyResolve": "gcp_joe_key_location"
        },
        "Match": {
          "Path": "/fhir/r4/metadata"
        },
        "Transforms": [
          {
            "PathSet": "/fhir/metadata"
          }
        ]
      }

    },

    "Clusters": {

      "self": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7074"
          }
        }
      },

      "gFhirLab-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://healthcare.googleapis.com/v1beta1/projects/udap-idp/locations/us-west1/datasets/gFhirLab/fhirStores/fhirlabs_open"
          }
        }
      }
    }
  },


  "Jwt": {
    "Authority": "https://host.docker.internal:5002",
    "RequireHttpsMetadata": true
  },


  "UdapMetadataOptions": {
    "Enabled": true,

    "UdapProfilesSupported": [
      "udap_dcr",
      "udap_authn",
      "udap_authz",
      "udap_to"
    ],

    "UdapMetadataConfigs": [
      {
        "Community": "udap://stage.healthtogo.me/",
        "SignedMetadataConfig": {
          "Issuer": "https://fhirlabs.net/fhir/r4",
          "Subject": "https://fhirlabs.net/fhir/r4",
          "AuthorizationEndPoint": "https://host.docker.internal:5002/connect/authorize",
          "TokenEndpoint": "https://host.docker.internal:5002/connect/token",
          "RegistrationEndpoint": "https://host.docker.internal:5002/connect/register"
        }
      },
      {
        "Community": "udap://fhirlabs1/",
        "SignedMetadataConfig": {
          "Issuer": "https://localhost:7074/fhir/r4",
          "Subject": "https://localhost:7074/fhir/r4",
          "AuthorizationEndPoint": "https://host.docker.internal:5002/connect/authorize",
          "TokenEndpoint": "https://host.docker.internal:5002/connect/token",
          "RegistrationEndpoint": "https://host.docker.internal:5002/connect/register"
        }
      }
    ]
  },

  "UdapFileCertStoreManifest": {
    "Communities": [
      {
        "Name": "udap://stage.healthtogo.me/",
        "IssuedCerts": [
          {
            "FilePath": "CertStore/issued/udap-sandbox-surescripts-2.p12",
            "Password": "8nww8nni"
          }
        ]
      },

      {
        "Name": "udap://fhirlabs1/",
        "IssuedCerts": [
          {
            "FilePath": "CertStore/issued/gfhirlabs.healthcare.client.pfx",
            "Password": "udap-test"
          }
        ]
      }
    ]
  },


  "SmartMetadata": {
    "issuer": "https://host.docker.internal:5002",
    "jwks_uri": "https://host.docker.internal:5002/.well-known/openid-configuration/jwks",
    "authorization_endpoint": "https://host.docker.internal:5002/connect/authorize",
    "token_endpoint": "https://host.docker.internal:5002/connect/token",
    "token_endpoint_auth_methods_supported": [
      "udap_pki_jwt", // inform Smart there is a support for UDAP
      "client_secret_basic",
      "private_key_jwt"
    ],
    "grant_types_supported": [
      "authorization_code",
      "client_credentials",
      "refresh_token"
    ],
    // Should be required when token_endpoint_auth_methods_supported contains udap_pki_jwt
    "registration_endpoint": "https://host.docker.internal:5002/connect/register",
    "scopes_supported": [ "openid", "profile", "launch", "launch/patient", "patient/*.rs", "user/*.rs", "offline_access" ],
    "response_types_supported": [ "code" ],
    "management_endpoint": "https://localhost:7074/user/manage", //todo in auth server or EHR?
    "introspection_endpoint": "https://host.docker.internal:5002/connect/introspect",
    "revocation_endpoint": "https://host.docker.internal:5002/connect/revoke",
    "code_challenge_methods_supported": [ "S256" ],
    "capabilities": [
      "launch-ehr",
      "permission-patient",
      "permission-v2",
      "client-public",
      "client-confidential-symmetric",
      "context-ehr-patient",
      "sso-openid-connect"
    ]
  }

}
